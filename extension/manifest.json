{
  "name": "Algo Sensei",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "icons/image.png",
    "48": "icons/image.png",
    "128": "icons/image.png"
  },
  "background": {
    "service_worker": "src/background.ts"
  },
  "permissions": ["sidePanel", "storage", "tabs", "scripting"],
  "content_scripts": [
    {
      "js": ["src/content-scripts/leetcodeContent.ts"],
      "matches": [
        "https://*.leetcode.com/problems/*",
        "https://leetcode.com/problems/*"
      ],
      "run_at": "document_end"
    }
  ]
}
