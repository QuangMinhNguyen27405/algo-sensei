{
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "icons": {
    "16": "icon/image.png",
    "32": "icon/image.png",
    "48": "icon/image.png",
    "96": "icon/image.png",
    "128": "icon/image.png"
  },
  "{{chrome}}.action": {
    "default_popup": "src/index.html"
  },
  "{{firefox}}.browser_action": {
    "default_popup": "src/index.html"
  },
  "background": {
    "{{chrome}}.service_worker": "src/background.ts",
    "{{firefox}}.scripts": ["src/background.js"]
  }
}
